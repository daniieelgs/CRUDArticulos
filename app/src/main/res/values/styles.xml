<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="title" parent="Widget.MaterialComponents.TextView">

        <item name="android:layout_marginTop">34dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="title.small" parent="Widget.MaterialComponents.TextView">

        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="dataInfo" parent="Widget.MaterialComponents.TextView">

        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="inputForm" parent="Widget.MaterialComponents.TextView">

        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:ems">10</item>

    </style>

    <style name="errorMessage" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="iconError">
        <item name="android:tint">@color/red</item>
        <item name="android:visibility">invisible</item>
        <item name="srcCompat">@drawable/ic_outline_cancel_24</item>
    </style>

</resources>